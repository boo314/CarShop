        </div>
        <div>
            @Html.TextBoxFor(model => model.FuelType)
        </div>
        <div class="">
            @Html.LabelFor(model => model.AmountOfDoors)
        </div>
        <div>
            @Html.TextBoxFor(model => model.AmountOfDoors)
        </div>
        <div class="">
            @Html.LabelFor(model => model.AmountOfSeats)
        </div>
        <div>
            @Html.TextBoxFor(model => model.AmountOfSeats)
        </div>
        <div class="">
            @Html.LabelFor(model => model.Color)
        </div>
        <div>
            @Html.TextBoxFor(model => model.Color)
        </div>
        <div class="">
            @Html.LabelFor(model => model.Type)
        </div>
        <div>
            @Html.TextBoxFor(model => model.Type)
        </div>

        <div>
            Thumbnail
        </div>
        <div>
            <input type="file" name="thumb" value="Add thumbnail"/>
        </div>

        <div>
            Gallery photos
        </div>
        <div>
            <input type="file" name="files" multiple value="Add photos"/>
        </div>
        
    </fieldset>
    <input type="submit" value="Add car" />

}
